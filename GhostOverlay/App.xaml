<Application
    x:Class="GhostOverlay.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    RequestedTheme="Dark"
    xmlns:local="using:GhostOverlay"
    xmlns:system="using:System">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <FontFamily x:Key="ContentControlThemeFontFamily">XamlAutoFontFamily, Assets\destiny_symbols_pc_bl.otf#Destiny Keys</FontFamily>

                    <Style x:Key="BaseTextBlockStyle" TargetType="TextBlock">
                        <Setter Property="FontFamily" Value="XamlAutoFontFamily, Assets\destiny_symbols_pc_bl.otf#Destiny Keys" />
                    </Style>

                    <Style
                        x:Key="GhostOverlayTextStyle"
                        BasedOn="{StaticResource BaseTextBlockStyle}"
                        TargetType="TextBlock">
                        <Setter Property="FontFamily" Value="Assets\NHaasGroteskTXPro-55Rg.ttf#NeueHaasGroteskText Pro, Assets\destiny_symbols_pc_bl.otf#Destiny Keys" />
                        <Setter Property="FontSize" Value="20" />
                    </Style>

                    <AcrylicBrush x:Key="MyAcrylicBrush"
                                  BackgroundSource="Backdrop"
                                  TintColor="Black"
                                  TintOpacity=".4"
                                  TintLuminosityOpacity=".7"
                                  AlwaysUseFallback="False"
                                  FallbackColor="#aa000000"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>
